APP_NAME=Humphrey
APP_ENV=local
APP_KEY=base64:86iU7Qfi4IbQ3VC7vQP7LUrQATMQzcbX/F6oG9UeHVE=
APP_DEBUG=true
APP_URL=http://localhost:8888
APP_PORT=8888

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration - External PostgreSQL
# Update these values to point to your external PostgreSQL instance
DB_CONNECTION=pgsql
DB_HOST=your-external-postgres-host
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# Use 'public' for local development, 'minio' for production
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration - External Redis
# Update these values to point to your external Redis instance
REDIS_CLIENT=phpredis
REDIS_HOST=your-external-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

SAIL_XDEBUG_MODE=develop,debug

JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true

USER_ACCOUNT_NAME=
USER_ACCOUNT_EMAIL=
USER_ACCOUNT_PASSWORD=

# Admin User Configuration
ADMIN_USER_ID=1

# Cache TTL Configuration (seconds)
# Blogs: 10 minutes (frequently updated)
CACHE_TTL_HOMEPAGE_BLOGS=600
# Projects: 30 minutes (moderately updated)
CACHE_TTL_HOMEPAGE_PROJECTS=1800
# Experiences/Expertises: 1 hour (rarely updated)
CACHE_TTL_HOMEPAGE_EXPERIENCES=3600
CACHE_TTL_HOMEPAGE_EXPERTISES=3600
CACHE_TTL_HOMEPAGE_USER_PROFILE=3600
# Homepage project display limit
HOMEPAGE_PROJECTS_LIMIT=6

# Laravel Octane Configuration
# Server: swoole, roadrunner, or frankenphp
OCTANE_SERVER=frankenphp
# Number of worker processes (default: auto based on CPU cores)
OCTANE_WORKERS=auto
# Number of task workers for concurrent tasks
OCTANE_TASK_WORKERS=auto
# Max requests before worker restart (memory leak protection)
OCTANE_MAX_REQUESTS=500

# Facebook App ID (for Open Graph meta tags)
# Get yours at: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=

# GitHub API & OAuth
# Token: https://github.com/settings/tokens (needs read:user scope)
# OAuth: https://github.com/settings/developers
GITHUB_TOKEN=your_personal_access_token_here
GITHUB_CLIENT_ID=your_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_oauth_client_secret_here

# Google OAuth
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
# https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# OG Image Service
# URL to the OpenGraph image generation service
OG_IMAGE_SERVICE_URL=http://og-image:3001

# MCP Server API Key (for remote access via claude.ai)
# Generate with: openssl rand -hex 32
MCP_API_KEY=
# Optional: comma-separated list of allowed IPs (empty = allow all authenticated)
# Example: MCP_ALLOWED_IPS=1.2.3.4,5.6.7.8
MCP_ALLOWED_IPS=
